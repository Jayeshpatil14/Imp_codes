package util;

public class Pattern1 {

	public static void main(String[] args) {
		int no_rows, row, col;
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter Number of Rows : ");
		no_rows = sc.nextInt();

		for (row = 1; row <= no_rows; row++) {
			for (col = 1; col <= row; col++) {
				System.out.print("* ");
			}
			System.out.println();
		}

	}

}
